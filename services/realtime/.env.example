# Realtime service
PORT=4000

# Redis (required)
REDIS_URL=redis://localhost:6379

# Supabase (required)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# JWT verification (recommended for high concurrency)
# In Supabase Dashboard: Project Settings -> API -> JWT Secret
SUPABASE_JWT_SECRET=YOUR_JWT_SECRET

# Sync scheduling
SYNC_EXEC_BUFFER_MS=2000
SYNC_SEEK_BUFFER_MS=2500
# Audience delay (only needed once HLS stage egress is enabled)
AUDIENCE_DELAY_SECONDS_DEFAULT=0

# Capacity / policy
ROOM_MAX_STAGE=20

# LiveKit (Stage) - optional (Phase 2)
LIVEKIT_URL=
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# HLS - optional (Phase 2)
HLS_PROVIDER=
HLS_LATENCY_SECONDS=6
